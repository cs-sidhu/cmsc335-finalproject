<div class="container">
    
    <h1>Find Out More About Your Next Destination Here!</h1>

    <form action="/" method="post">
        <label>Enter a Country Name:</label>
        <input type="text" id="country" name="country" value="e.g., Turkey">
        <button type="submit">Search</button>
      </form>
    
      <% if (country_info) { %>
        <h2>Information about <%= country_info.name %></h2>
        <p><strong>Capital:</strong> <%= country_info.capital %></p>
        <p><strong>Population:</strong> <%= country_info.population %></p>
        <p><strong>Region:</strong> <%= country_info.continents %></p>
        <p><strong>Languages:</strong> <%= country_info.languages %></p>
        <p><strong>Currencies:</strong> <%= country_info.currencies %></p>
        <img src="<%= country_info.flag %>" alt="Flag of <%= country_info.name %>" width="150">
      <% } %>

      <% if (error) { %>
        <p style="color: red;"><strong>Error:</strong> <%= error %></p>
      <% } %>
    
</div>


   
